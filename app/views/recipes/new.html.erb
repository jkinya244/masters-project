<h1>New Recipe</h1>

<%= form_with model: @recipe, local: true do |form| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
        <ul>
          <% @recipe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cuisine %>
    <%= form.text_field :cuisine, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :meal_type %>
    <%= form.text_field :meal_type, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cooking_instructions %>
    <%= form.text_area :cooking_instructions, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Save Recipe", class: 'btn btn-primary' %>
  </div>
<% end %>

